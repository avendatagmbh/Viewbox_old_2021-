<Window x:Class="SerialNumberPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" >
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Seriennummern" />
            <TextBox x:Name="txtSerialNumbers" AcceptsReturn="True" Height="200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
            <Button x:Name="btnPrint" Content="Print" Width="75" HorizontalAlignment="Right" Margin="0,8,0,0" Click="btnPrint_Click" />
        </StackPanel>
    </Grid>
</Window>
