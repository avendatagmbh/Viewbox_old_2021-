<UserControl x:Class="eBalanceKitConfig.Controls.CtlDbConfig_SQLServer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Servername" Margin="0,8,0,0"/>
            <TextBox Text="{Binding Hostname}" />

            <TextBlock Text="Benutzername" Margin="0,8,0,0"/>
            <TextBox Text="{Binding User}" />

            <TextBlock Text="Passwort" Margin="0,8,0,0"/>
            <PasswordBox x:Name="txtPassword" />

            <TextBlock Text="Datenbankname" Margin="0,8,0,0"/>
            <TextBox Text="{Binding DbName}" />

        </StackPanel>
    </Grid>
</UserControl>
