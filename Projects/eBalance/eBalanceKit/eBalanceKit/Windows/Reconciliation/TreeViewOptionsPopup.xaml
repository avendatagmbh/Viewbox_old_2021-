<UserControl x:Class="eBalanceKit.Windows.Reconciliation.TreeViewOptionsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Localisation="clr-namespace:eBalanceKitResources.Localisation;assembly=eBalanceKitResources"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Border Style="{StaticResource PopupBorder}">
    <StackPanel>
            <CheckBox Content="{x:Static Localisation:ResourcesReconciliation.ShowCommercialBalanceValues}" IsChecked="{Binding VisualOptions.ShowCommercialBalanceValues}" />
            <CheckBox Content="{x:Static Localisation:ResourcesReconciliation.ShowTaxBalanceValues}" IsChecked="{Binding VisualOptions.ShowTaxBalanceValues}" />
            <CheckBox Content="{x:Static Localisation:ResourcesReconciliation.ShowReconciliationValues}" IsChecked="{Binding VisualOptions.ShowReconciliationValues}" />
        </StackPanel>
    </Border>
</UserControl>
