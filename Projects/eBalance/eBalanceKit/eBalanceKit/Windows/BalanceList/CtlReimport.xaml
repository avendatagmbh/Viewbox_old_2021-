<UserControl x:Class="eBalanceKit.Windows.BalanceList.CtlReimport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:eBalanceKitResources.Localisation;assembly=eBalanceKitResources"        
             mc:Ignorable="d" 
             xmlns:wpfc="clr-namespace:AvdWpfControls;assembly=AvdWpfControls"
             d:DesignHeight="354" d:DesignWidth="784">

    <Border Style="{StaticResource GroupBoxBorder}" Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- main part -->
            <Grid>
            </Grid>

            <!-- separator -->
            <Separator Grid.Row="1" Margin="0,2.5,0,5" />

            <!-- button bar -->
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <wpfc:ImageButton2 x:Name="btnBack" ImageSource="/eBalanceKitResources;component/Resources/Left.png"
                               Caption="{x:Static loc:ResourcesCommon.Back}" Click="btnBack_Click" />


            </StackPanel>

        </Grid>
    </Border>
</UserControl>
