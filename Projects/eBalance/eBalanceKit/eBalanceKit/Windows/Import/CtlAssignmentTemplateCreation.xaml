<UserControl x:Class="eBalanceKit.Windows.Import.CtlAssignmentTemplateCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Localisation="clr-namespace:eBalanceKitResources.Localisation;assembly=eBalanceKitResources" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox Margin="12,37,12,0" Name="txtTemplateName" Text="{Binding TemplateGenerator.Name}" Height="22" VerticalAlignment="Top" />
        <TextBox Margin="12,111,12,12" Name="txtTemplateDescription" Text="{Binding TemplateGenerator.Comment}" MinWidth="276" MinHeight="150" TextWrapping="Wrap" />
        <Label Content="{x:Static Localisation:ResourcesHyperCube.lblTemplateName}" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lblTemplateName" VerticalAlignment="Top" />
        <Label Content="{x:Static Localisation:ResourcesHyperCube.lblTemplateDescription}" Height="28" HorizontalAlignment="Left" Margin="12,77,0,0" Name="lblTemplateDescription" VerticalAlignment="Top" />
    </Grid>
</UserControl>
