<UserControl x:Class="eBalanceKit.Controls.CtlErrorMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Height="14" Source="/eBalanceKitResources;component/Resources/ValidationError.png"/>
            <TextBlock x:Name="errMessage" Foreground="Red" Text="{Binding Message}" TextWrapping="Wrap" Margin="5,0,0,0"/>
        </StackPanel>       
    </Grid>
</UserControl>
