<UserControl x:Class="eBalanceKit.Controls.CtlElsterServerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:eBalanceKit.Controls" mc:Ignorable="d" Foreground="White" Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Margin="0,0,10,10" Background="{StaticResource infoBgBrush}" CornerRadius="5" Padding="5" Opacity="0.85">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" Opacity="0.75" />
            </Border.Effect>
        
            <Controls:CtlElsterServerInfoText />
        </Border>
    </Grid>
</UserControl>
