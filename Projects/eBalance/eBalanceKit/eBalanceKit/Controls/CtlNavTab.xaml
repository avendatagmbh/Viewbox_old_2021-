<UserControl x:Class="eBalanceKit.Controls.CtlNavTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="Transparent" >
    
    <Border CornerRadius="0,15,0,0" MinWidth="50" Height="18" HorizontalAlignment="Left" Padding="5,0" BorderBrush="#666" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#F0F0F0" Offset="0" />
                <GradientStop Color="#bbb" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <TextBlock Text="{Binding Caption, Mode=OneWay}" Foreground="#333" Margin="0,0,5,0" />
    </Border>
</UserControl>
