<Application x:Class="DbSearch.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Converter="clr-namespace:DbSearch.Converter"
             Startup="Application_Startup"
             ShutdownMode="OnMainWindowClose"
             StartupUri="Windows\DlgMainWindow.xaml"
             >
    <Application.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="pack://application:,,,/AvdWpfStyles;component/Default.xaml"/>
                    <ResourceDictionary Source="/ResourceDictionaries/AppResources.xaml"/>
                </ResourceDictionary.MergedDictionaries>
              <Converter:MappingToBrushConverter x:Key="mappingToBrushConverter" />
            </ResourceDictionary>
    </Application.Resources>
</Application>
