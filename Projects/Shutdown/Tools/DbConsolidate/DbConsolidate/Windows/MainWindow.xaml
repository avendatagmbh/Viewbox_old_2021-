<Window x:Class="DbConsolidate.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Profile="clr-namespace:DbConsolidate.Controls"
        Title="MainWindow" Height="422" Width="730">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        
        <Profile:DatabaseChoice Grid.Column="1" DataContext="{Binding SourceDatabaseModel}"/>
    </Grid>
</Window>
