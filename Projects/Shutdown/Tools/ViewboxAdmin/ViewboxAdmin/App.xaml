<Application x:Class="ViewboxAdmin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnMainWindowClose"
             Exit="Application_Exit">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AvdWpfStyles;component/Default.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/AppResources.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AvdWpfStyles;component/Brushes.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
